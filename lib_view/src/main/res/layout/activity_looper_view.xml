<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:orientation="vertical">


    <com.chanpay.lib_view.looperView.view.LoopRotarySwitchView
        android:layout_marginTop="200dp"
        android:id="@+id/mLoopRotarySwitchView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:direction="right">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="328dp"
                android:layout_height="153dp"
                android:background="@mipmap/banner_bg_one"/>

            <TextView
                android:id="@+id/tv_home_one"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日总交易(元)"
                android:textSize="13sp"
                />

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="86920117556.23"
                android:textColor="#fffefdfa"
                android:textSize="37sp"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="328dp"
                android:layout_height="153dp"
                android:background="@mipmap/banner_bg_two"/>

            <TextView
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日总交易(元)"
                android:textSize="13sp"
                />

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="86920117556.23"
                android:textColor="#fffefdfa"
                android:textSize="37sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="328dp"
                android:layout_height="153dp"
                android:background="@mipmap/banner_bg_one"/>


            <TextView
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日总交易(元)"
                android:textSize="13sp"
                />

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="86920117556.23"
                android:textColor="#fffefdfa"
                android:textSize="37sp"
                />
        </RelativeLayout>

    </com.chanpay.lib_view.looperView.view.LoopRotarySwitchView>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Set X"
            android:textColor="@android:color/black"
            />

        <SeekBar
            android:id="@+id/seekBarX"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:max="180"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Set Z"
            android:textColor="@android:color/black"
            />

        <SeekBar
            android:id="@+id/seekBarZ"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:max="360"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/switchLeftright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:checked="true"
                android:text="left-right"/>

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:checked="false"
                android:text="Auto Switch"/>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
