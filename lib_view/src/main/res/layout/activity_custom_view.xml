<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomViewActivity">


    <com.chanpay.lib_view.RectProgressView
        android:id="@+id/progressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.chanpay.lib_view.ImageNumberView
        android:id="@+id/imageNumberView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <com.chanpay.lib_view.banner.MZBannerView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:canLoop="true"
        app:indicatorAlign="center"
        app:middle_page_cover="false"
        app:open_mz_mode="true" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.chanpay.lib_view.CircularProgressPlusView
            android:id="@+id/CircularProgressView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageView
            android:layout_width="19dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_jiantou"
            android:rotation="45" />
    </FrameLayout>


    <com.chanpay.lib_view.PlaygroundProgressView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:pvtype="3" />

    <com.chanpay.lib_view.FiveRuandProgressView
        android:id="@+id/fiveRuandProgressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.chanpay.lib_view.CellProgressView
        android:id="@+id/cell_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.chanpay.lib_view.WheelCircleFiveView
        android:visibility="gone"
        android:id="@+id/wheelCircleFive"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:FiveCircleColor="#84CCC9"
        app:FourCircleColor="#F6B37F"
        app:OneCircleColor="#FFBA00"
        app:ThreeCircleColor="#BE88E8"
        app:TwoCircleColor="#00B7EE" />

    <com.chanpay.lib_view.ActionProgressView
        android:id="@+id/action_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</LinearLayout>