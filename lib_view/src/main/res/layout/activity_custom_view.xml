<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomViewActivity">

    <com.chanpay.lib_view.RectProgressView
        android:id="@+id/progressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.chanpay.lib_view.ImageNumberView
        android:id="@+id/imageNumberView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.chanpay.lib_view.SpreadView
        android:id="@+id/spreadView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:spread_center_color="#E91E63"

        app:spread_radius="100"

        app:spread_delay_milliseconds="35"

        app:spread_distance="5"
        app:spread_max_radius="90"

        app:spread_spread_color="#009688" />

</LinearLayout>