<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:onClick="StartAlphaAnimal"
        android:textAllCaps="false"
        android:text="透明度"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="StartRotationAnimal"
        android:textAllCaps="false"
        android:text="旋转"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="StartTranslationXAnimal"
        android:textAllCaps="false"
        android:text="平移"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:onClick="StartScaleXAnimal"
        android:textAllCaps="false"
        android:text="缩放"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:onClick="StartCustomAnimation"
        android:textAllCaps="false"
        android:text="自定义动画效果"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="StartSetAnimation"
        android:textAllCaps="false"
        android:text="组合动画（AnimatorSet 类）"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <com.chanpay.lib_base.Animation.ObjectAnimation.MyView2
            android:id="@+id/change_color_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/btn_animation"
            android:text="我是动画"
            android:layout_width="250px"
            android:layout_height="150px" />

    </FrameLayout>


</LinearLayout>