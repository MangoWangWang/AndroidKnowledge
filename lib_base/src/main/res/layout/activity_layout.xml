<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayoutUse.LayoutActivity">


    <Button
        android:onClick="startFrameLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAllCaps="false"
        android:text="FrameLayout"
        android:id="@+id/bt_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="startLinearLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAllCaps="false"
        android:text="LinearLayout"
        android:id="@+id/bt_linear_layout"
        app:layout_constraintTop_toBottomOf="@+id/bt_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="startAbsoluteLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAllCaps="false"
        android:text="AbsoluteLayout"
        android:id="@+id/bt_absolute_layout"
        app:layout_constraintTop_toBottomOf="@+id/bt_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="startRelativeLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAllCaps="false"
        android:text="RelativeLayout"
        android:id="@+id/bt_relative_layout"
        app:layout_constraintTop_toBottomOf="@+id/bt_absolute_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="startTableLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAllCaps="false"
        android:text="TableLayout"
        android:id="@+id/bt_table_layout"
        app:layout_constraintTop_toBottomOf="@+id/bt_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="startConstranintLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAllCaps="false"
        android:text="ConstraintLayout"
        android:id="@+id/bt_constraint_layout"
        app:layout_constraintTop_toBottomOf="@+id/bt_table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>